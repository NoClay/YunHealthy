<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titleText" format="string"/>

    <declare-styleable name="ScanView">
        <attr name="textColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="level1Color" format="color"></attr>
        <attr name="level2Color" format="color"></attr>
        <attr name="level3Color" format="color"></attr>
        <attr name="level4Color" format="color"></attr>
        <attr name="level5Color" format="color"></attr>
    </declare-styleable>


    <declare-styleable name="FoldLineView">
        <attr name="maxColor" format="color"/>
        <attr name="minColor" format="color"/>
        <attr name="averageColor" format="color"/>
        <attr name="backLineColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="labelColor" format="color"/>
        <attr name="labelSize" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="isScale" format="boolean"></attr>
        <attr name="circleColor" format="color"></attr>
    </declare-styleable>


    <!--corner_color 边角颜色，
    scanner_color 扫描线颜色
    possible_result_color 扫描点颜色
    frame_color 扫描框边线颜色
    mask_color 模糊区域颜色
    label_text  框上方提示
-->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color"/>
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="float"/>
    </declare-styleable>


    <declare-styleable name="YunHealthyErrorView">
        <attr name="errorAnimWidth" format="dimension">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
            <enum name="fill_parent" value="-1"/>
        </attr>
        <attr name="errorAnimHeight" format="dimension">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
            <enum name="fill_parent" value="-1"/>
        </attr>
        <attr name="errorAnimFile" format="string"/>
        <attr name="errorTip" format="string"/>
        <attr name="errorTipSize" format="dimension"/>
        <attr name="errorTipColor" format="color"/>
    </declare-styleable>
</resources>