<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin_normal"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/cardRadius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding">

        <TextView
            android:id="@+id/name"
            style="@style/AppTheme.TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="酚氨咖敏片"/>

        <include layout="@layout/view_divider_line_horizontal"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_middle_height"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_title_smallest"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考价格："/>

            <TextView
                android:id="@+id/price"
                android:textSize="@dimen/text_title_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"/>
        </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_title_smallest"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国药准字："/>

            <TextView
                android:id="@+id/pzwh"
                android:textSize="@dimen/text_title_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H50021978"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_title_smallest"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执行标准："/>

            <TextView
                android:id="@+id/zxbz"
                android:textSize="@dimen/text_title_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WS-10001-(HD-1021)-2002"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_title_smallest"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产公司："/>

            <TextView
                android:id="@+id/manu"
                android:textSize="@dimen/text_title_smallest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆华森制药有限公司"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>