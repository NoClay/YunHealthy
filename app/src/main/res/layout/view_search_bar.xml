<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_margin="@dimen/margin_tiny"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/actionSearch"
            android:gravity="center"
            style="@style/AppTheme.TextViewTitle"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:textColor="@color/white"
            android:background="@drawable/radius_5dp_rectangle_blue_bg"
            android:layout_width="@dimen/search_button_width"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:background="@drawable/background_search_bar"
            android:paddingRight="@dimen/normal_padding"
            android:paddingLeft="@dimen/normal_padding"
            android:layout_marginRight="65dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/icon_search"
                android:layout_width="19dp"
                android:layout_height="19dp"/>
            <EditText
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:id="@+id/search_input"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColorHint="@color/searchBarTitle"
                android:textSize="@dimen/text_title_middle"
                android:hint="搜索药品，药企，常见疾病"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>