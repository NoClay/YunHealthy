<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/headerLayer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/normal_padding"
            android:text="@string/dialog_food_menu_tagset_hint"
            android:textSize="@dimen/text_title_middle" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tabSetBt"
            android:tint="@color/black"
            android:src="@drawable/close5"
            android:padding="@dimen/normal_padding"
            android:layout_width="@dimen/normal_image_button_size"
            android:layout_height="@dimen/normal_image_button_size" />
    </RelativeLayout>
    <include layout="@layout/view_divider_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foodKindList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>