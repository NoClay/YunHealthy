<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/card_margin_normal"
    android:background="@color/black"
    app:cardCornerRadius="@dimen/cardRadius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/foodImage"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_big_height" />

        <TextView
            android:id="@+id/foodName"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="@dimen/card_margin_large"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title_larger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/foodCategory"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/card_margin_large"
            android:textColor="@color/contentTextColor"
            android:textSize="@dimen/text_content_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <HorizontalScrollView
            android:layout_margin="@dimen/card_margin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/foodTagContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</android.support.v7.widget.CardView>