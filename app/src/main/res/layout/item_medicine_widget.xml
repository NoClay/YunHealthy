<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_left"
    android:paddingEnd="@dimen/padding_right"
    android:paddingBottom="@dimen/padding_bottom"
    android:layout_marginTop="5dp"
    tools:ignore="RtlCompat">

    <LinearLayout
        android:paddingTop="@dimen/padding_top"
        android:paddingBottom="@dimen/padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/nextTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="center"
            android:text="12:23"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_title_largest" />

        <ImageView
            android:layout_width="@dimen/direction_size"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/showTag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:lines="1"
            android:paddingStart="5dp"
            android:text="治疗感冒"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_title_middle" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/direction_size"
        android:background="@color/divider"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical|left"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/medicineIconHint"
            android:id="@+id/showMedicineIcon"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/medicine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_left"
            android:paddingTop="@dimen/padding_top">

            <TextView
                android:id="@+id/showMedicineName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="维他命"
                style="@style/AppTheme.MarqueeText"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_largest"
                android:textStyle="bold" />

            <TextView
                style="@style/AppTheme.MarqueeText"
                android:id="@+id/showMedicineUseType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="口服3.5粒"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_larger" />

            <TextView
                style="@style/AppTheme.MarqueeText"
                android:id="@+id/showMedicineLength"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="还需服用3天"
                android:textColor="@color/black"
                android:textSize="@dimen/text_content_larger" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
