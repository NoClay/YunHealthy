<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/layout_tool_bar"/>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="@drawable/circle_button_bg"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:text="姓名"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <EditText
                    android:id="@+id/name"
                    android:textSize="17sp"
                    android:textColorHint="@color/dimGray"
                    android:hint="请输入您的姓名"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="50dp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="10"
                android:background="@drawable/circle_button_bg"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:text="性别"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                        <RadioButton
                            android:id="@+id/man_check"
                            android:text="男"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                        <RadioButton
                            android:id="@+id/woman_check"
                            android:text="女"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_button_bg"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/loadPassWord"
                    android:ellipsize="none"
                    android:password="true"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="请输入密码(6-16位字母和数字的组合)"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_button_bg"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/loadPassWordAgain"
                    android:ellipsize="none"
                    android:password="true"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="请再次输入密码"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_button_bg"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/loadPhoneNumber"
                    android:ellipsize="none"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/send_message"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:text="获取验证码"
                    android:background="@drawable/circle_button_2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_button_bg"
                android:layout_width="300dp"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/checkNumber"
                    android:ellipsize="none"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="请输入短信验证码"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

