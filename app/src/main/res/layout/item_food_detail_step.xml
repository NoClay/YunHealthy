<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardMarginTop"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/foodStepText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextViewContent"
            android:layout_marginBottom="@dimen/cardMarginTop"
            android:text="1. 把南瓜先洗洗，[可去皮，也可不去皮]切成小块" />

        <ImageView
            android:id="@+id/foodStepImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_big_height"
            android:layout_marginBottom="@dimen/cardMarginTop"
            android:scaleType="fitXY" />
    </LinearLayout>

    <include layout="@layout/view_divider_line" />
</LinearLayout>