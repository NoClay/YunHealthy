<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="indi.noclay.cloudhealth.activity.SearchResultInfoActivity">
    <include layout="@layout/layout_tool_bar"/>
    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/contentLayer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_middle_height"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tagListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <indi.noclay.cloudhealth.myview.YunHealthyErrorView
                android:id="@+id/errorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:errorAnimFile="cloud_disconnection.json"
                app:errorAnimHeight="match_parent"
                app:errorAnimWidth="match_parent"
                app:errorTipColor="@color/black"
                app:errorTipSize="@dimen/text_content_small">

            </indi.noclay.cloudhealth.myview.YunHealthyErrorView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
